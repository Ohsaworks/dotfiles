autodetach on
defbce on
vbell off
defscrollback 10000
startup_message off
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%{.rW}%n: %t %{-} %=%{..G}%H %{..Y}LoadAvg: %l  %c "
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w"

utf8
defencoding utf8
encoding utf8 utf8

bind 'U' eval "encoding utf8" "stuff 'export LANG=ja_JP.UTF-8\012'"
bind 'E' eval "encoding euc"  "stuff 'export LANG=ja_JP.EUC-JP\012'"

